<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sapui5.demo.mvcapp.controller.Detail">
	<Page 
		title="Supplier Detail"
		navButtonPress="onNavPress"
		showNavButton="true">
		<content>
			<ObjectHeader
				title="{Name}"
				humber="ID: {ID}">
				<attributes>
					<ObjectAttribute
						text="{Address/Country}" />
				</attributes>
			</ObjectHeader>
		</content>
	</Page>
</mvc:View>